# Django настройки
SECRET_KEY=your-secret-key-here
DEBUG=True
DJANGO_SETTINGS_MODULE=gomelzlin.settings.development

# База данных
DATABASE_URL=postgres://username:password@localhost:5432/gomelzlin_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Email настройки
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Yandex Maps API
YANDEX_MAPS_API_KEY=your-yandex-maps-api-key

# Google Analytics
GOOGLE_ANALYTICS_GTAG_PROPERTY_ID=GA_MEASUREMENT_ID

# Celery настройки
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Медиа и статика
MEDIA_URL=/media/
STATIC_URL=/static/

# Безопасность (для продакшена)
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Sentry (для продакшена)
SENTRY_DSN=your-sentry-dsn

# Loggers
LOG_LEVEL=INFO